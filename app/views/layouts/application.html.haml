!!!
%html
  %head
    %title FinancialDashboard
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %nav.navbar-fixed-top.navbar-inverse
    .navbar-header
      #indices
    .navbar-collapse.collapse
      .navbar-right
        .navbar-form
          - if current_user
            = link_to('Dashboard', root_path, class: 'btn')
            = link_to('Profile', user_path(current_user), class: 'btn')
            = link_to('Sign Out', signout_path, class: 'btn')
          - else
            = render 'users/form_signin'
  .navbar_padding

  %body
  = yield
  %footer
    .container
